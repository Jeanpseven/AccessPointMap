{
  "Serilog": {
    "Using": [],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Quartz": "Warning"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId" ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:dd-MM-yyyy HH:mm:ss}] [{Level:u3}] [{RequestId}] - {Message}{NewLine:1}{Exception:1}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "/var/apm/log/api.log",
          "outputTemplate": "[{Timestamp:dd-MM-yyyy HH:mm:ss}] [{Level:u3}] [{RequestId}] - {Message}{NewLine:1}{Exception:1}"
        }
      }
    ]
  },
  "DatabaseSettings": {
    "ConnectionString": ""
  },
  "JsonWebTokenSettings": {
    "TokenSecret": "",
    "BearerTokenExpirationMinutes": 0,
    "RefreshTokenExpirationDays": 0,
    "Authority": "",
    "Audience": ""
  },
  "AuthorizationSettings": {
    "PromoteFirstAccount": true
  },
  "SecuritySettings": {
    "SecureMode": false,
    "Origins": []
  },
  "HealthCheckSettings": {
    "Enabled": true
  },
  "SwaggerSettings": {
    "Enabled": true
  },
  "AllowedHosts": "*"
}
