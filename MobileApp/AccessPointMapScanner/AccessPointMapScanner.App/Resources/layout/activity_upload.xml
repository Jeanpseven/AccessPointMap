<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/formLoginInput"
        android:hint="Login"
        android:backgroundTint="#FFFFFF"
        android:textColor="#1CB5E0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5px"/>

    <EditText
        android:id="@+id/formPasswordInput"
        android:hint="Password"
        android:backgroundTint="#FFFFFF"
        android:textColor="#1CB5E0"
        android:layout_below="@+id/formLoginInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5px"/>

    <Button
        android:id="@+id/authButton"
        android:layout_below="@+id/formPasswordInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign in and upload"
        android:backgroundTint="#FFFFFF"
        android:textColor="#1CB5E0"
        android:layout_margin="5px"/>

    <CheckBox
        android:id="@+id/checkBoxForceMaster"
        android:text="Master (leave unchecked fo standard upload)"
        android:layout_below="@+id/authButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5px"/>
</RelativeLayout>
